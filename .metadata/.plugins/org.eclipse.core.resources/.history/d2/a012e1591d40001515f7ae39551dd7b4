from django import forms

class RegisterInfo(forms.Form):
    name = forms.CharField(max_length=50)
    portrait = forms.FileField(required=False)
    club = forms.CharField(max_length=100, required=False)
    
    hometown = forms.CharField(max_length=100, required=False)

    status = forms.CharField(max_length=100, required=False)
    
    interest = forms.CharField(widget=forms.Textarea, required=False)
    
    
    
