from django import forms

class RegisterInfo(forms.Form):
    name = forms.CharField(max_length=50)
    portrait = forms.FileField(required=False)
    club = forms.CharField(max_length=100, required=False)
    
    hometown = forms.CharField(max_length=100, required=False)

    status = forms.CharField(max_length=100, required=False)
    
    interest = forms.CharField(widget=forms.Textarea, required=False)
    
    
    
        # basic
    portrait = forms.CharField(max_length=100, blank=True, null=True)
    name = forms.CharField(max_length=100)
    sex = forms.CharField(max_length=8, blank=True, null=True)
    status = forms.CharField(max_length=16, null=True)
    lovebridge = forms.BooleanField()
    hometown = forms.TextField(blank=True, null=True)
    school = forms.TextField(blank=True)
    
    # toastmaster
    club = forms.ForeignKey(null=True)
    join_dt = forms.DateField(null=True)
    progress = forms.TextField(null=True)
    positions = forms.TextField(null=True)
    
    # self
    interest = forms.TextField(blank=True, null=True)
    intro = forms.TextField(null=True)
    recent = forms.TextField(null=True)
    
    