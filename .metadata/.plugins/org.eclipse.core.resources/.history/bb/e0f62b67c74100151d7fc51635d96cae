def is_login(request):
    if 'email' in request and request['email']:
        return True
    else:
        return False
    
def get_login_email(request):
    
    if is_login(request):
        return request['email']
    else:
        return ''
    
def get_login_name(request):
    if 'name' in request and request['name']:
        return request['name']
    else:
        return ''